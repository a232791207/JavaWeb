<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.sanker.entity.player">
	<class name="PlayerRelation" table="player_relation">
		<id name="id">
			<column name="id" />
			<generator class="uuid"></generator>
		</id>
		<property name="playerId" type="string"/>
		<property name="friendId" type="string"/>
		<property name="likeFlag" type="integer"/>
		<property name="dateTime"/>
	</class>
</hibernate-mapping>
