<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.sanker.entity.game">
	<class name="Ledger" table="ledger">
		<id name="id">
			<column name="id" />
			<generator class="uuid"></generator>
		</id>
		<property name="playerId" type="string"/>
		<property name="ledgerType" type="string" length="2"/>
		<property name="ledgerNum" type="integer"/>
		<property name="ledgerScore" type="integer"/>
		<property name="target" type="string"/>
		<property name="ledgerName" type="string"/>
		<property name="ledgerDetail" type="string" length="100"/>
		<property name="gameNum" type="integer"/>
		<property name="roomId" type="string"/>
	</class>
</hibernate-mapping>
