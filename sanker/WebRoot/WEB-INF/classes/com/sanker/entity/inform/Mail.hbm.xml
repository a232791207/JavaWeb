<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.sanker.entity.inform">
	<class name="Mail" table="mail">
		<id name="id">
			<column name="id" />
			<generator class="uuid"></generator>
		</id>
		<property name="senderId" type="string"/>
		<property name="receiverId" type="string"/>
		<property name="title" type="string"/>
		<property name="content" type="string"/>
		<property name="sendTime"/>
		<property name="status" type="string"/>
		<property name="type" type="string"/>
		<property name="senderName" type="string"/>
	</class>
</hibernate-mapping>
